{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/app/*"],
      "@components/*": ["src/components/*"],
      "@server/*": ["src/server/*"]
    },
    "types": ["vite/client"]
  },
  "include": ["src/app", "src/components", "vite.config.ts"]
}
