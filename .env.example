NODE_ENV=development
PORT=3000

# Redis session storage
REDIS_URL=redis://redis:6379
SESSION_TTL_SECONDS=86400
COOKIE_NAME=atrium_session
S3_LIST_CACHE_ENABLED=true
S3_LIST_CACHE_TTL_SECONDS=300
S3_LIST_CACHE_INVALIDATION_MODE=targeted
S3_LIST_CACHE_INCLUDE_HEADERS=true
BUCKET_SIZE_CALC_INTERVAL_HOURS=1
BUCKET_SIZE_MAX_DURATION_MS=300000
BUCKET_SIZE_MAX_OBJECTS=1000000
ENABLE_S3_URI_COPY=false

# S3-compatible provider config (env-driven; not user-editable in UI)
S3_ENDPOINT=http://minio:9000
S3_REGION=us-east-1
S3_FORCE_PATH_STYLE=true

# Upload limits
MAX_UPLOAD_SIZE_MB=100

# Audit logging
AUDIT_LOG_SINK=filesystem
AUDIT_LOG_DIR=audit-logs
AUDIT_LOG_RETENTION_DAYS=30
AUDIT_LOG_LOKI_URL=

# Sentry (backend)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=atrium@0.1.0
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_ENABLE_LOGS=true
SENTRY_ENABLE_METRICS=true

# Sentry (frontend runtime configuration â€“ used by `/api/runtime-config`)
FRONTEND_SENTRY_DSN=
FRONTEND_SENTRY_ENVIRONMENT=development
FRONTEND_SENTRY_RELEASE=atrium@0.1.0
FRONTEND_SENTRY_TRACES_SAMPLE_RATE=0.1
FRONTEND_SENTRY_ENABLE_LOGS=true
FRONTEND_SENTRY_ENABLE_METRICS=true
FRONTEND_SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0.1
FRONTEND_SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE=1.0

# MinIO test credentials for docker-compose local testing
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
